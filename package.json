{
  "name": "cotton-candy-bot",
  "version": "0.1.0-beta",
  "description": "High-performance Solana trading terminal with MEV protection and optimized tick-loops.",
  "author": "Snapwave333",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "server:dev": "nodemon server/index.js --ignore db.json",
    "electron:dev": "concurrently \"npm run dev\" \"npm run server:dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "next build && electron-builder"
  },
  "build": {
    "appId": "com.cottoncandy.bot",
    "productName": "CottonCandyBot",
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "assets/icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "**/*",
      "main.js",
      "assets/icon.png"
    ]
  },
  "dependencies": {
    "@jup-ag/api": "^6.0.48",
    "@radix-ui/react-slider": "^1.3.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/wallet-adapter-react-ui": "^0.9.35",
    "@solana/wallet-adapter-wallets": "^0.19.32",
    "@solana/web3.js": "^1.91.0",
    "autoprefixer": "^10.4.23",
    "bs58": "^5.0.0",
    "client-only": "^0.0.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.0.8",
    "idb-keyval": "^6.2.2",
    "lightweight-charts": "^4.1.3",
    "lucide-react": "^0.344.0",
    "next": "^16.1.1",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "server-only": "^0.0.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.19",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^20",
    "@types/react": "19.2.7",
    "@types/react-dom": "^18.3.7",
    "concurrently": "^9.2.1",
    "electron": "33.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.0",
    "prettier": "^3.7.4",
    "typescript": "5.9.3",
    "wait-on": "^9.0.3"
  }
}
